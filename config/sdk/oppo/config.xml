<?xml version="1.0" encoding="UTF-8"?>
<config>
    
    <params>
        <param name="app_Id" required="1"  showName="appId" desc="oppo" bWriteInManifest="0" bWriteInClient="1" />
        <param name="appSecret" required="1"  showName="appSecret" desc="oppo" bWriteInManifest="0" bWriteInClient="1" />
        <param name="app_key" required="1"  showName="app_key" desc="oppo" bWriteInManifest="1" bWriteInClient="1" />
        <param name="is_offline_game" required="1"  showName="is_offline_game" desc="oppo" bWriteInManifest="1" bWriteInClient="0" /> 
        <param name="PayNotifyUrl" required="1"  showName="PayNotifyUrl" desc="oppo" bWriteInManifest="0" bWriteInClient="1" /> 
        <param name="debug_mode" required="1"  showName="debug_mode" desc="oppo" bWriteInManifest="1" bWriteInClient="0" />
        <param name="TALKING_APPID" required="1" showName="talkingdata的appid" desc="oppo" bWriteInManifest="0" bWriteInClient="1" />
       	<param name="TALKING_CHANNEL" required="1" showName="talkingdata的渠道号" desc="oppo" bWriteInManifest="0" bWriteInClient="1" />
    </params>
    
    <operations>
        <operation step="1" type="mergeManifest" from="SDKManifest.xml" to="AndroidManifest.xml" />
        <operation step="2" type="copyRes" from="assets" to="assets" />
        <operation step="3" type="copyRes" from="libs" to="lib" />
        <operation step="4" type="copyRes" from="res" to="res" />
    </operations>
    
    <plugins>
        <plugin name="com.u8.sdk.OppoUser" type="1" desc="用户登录接口"/>
        <plugin name="com.u8.sdk.OppoPay" type="2" desc="用户支付接口"/>
    </plugins>
    
    <version>
        <name>oppo</name>
        <versionCode>1</versionCode>
        <versionName>2.0.0</versionName>
    </version>    
    
</config>